@model CURD_Operation.Models.Item

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Explore <a href="https://docs.microsoft.com/aspnet/core">creating Web applications with ASP.NET Core</a>.</p>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input asp-for="Image" type="file" class="form-control" />
    </div>

    <button type="submit">Upload Image</button>
</form>

@foreach (var item in Model)
{
    <tr>
        <td>
            <img src="data:image/png;base64,@Convert.ToBase64String(item.Image)" alt="Image" />
        </td>
    </tr>
}
